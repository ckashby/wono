<p id="notice"><%= notice %></p>

<h1>Job Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day</th>
      <th>Desc</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_requests.each do |job_request| %>
      <tr>
        <td><%= job_request.title %></td>
        <td><%= job_request.day %></td>
        <td><%= job_request.desc %></td>
        <td><%= job_request.time %></td>
        <td><%= job_request.user_id %></td>
        <td><%= link_to 'Show', job_request %></td>
        <td><%= link_to 'Edit', edit_job_request_path(job_request) %></td>
        <td><%= link_to 'Destroy', job_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Request', new_job_request_path %>
